{
  "manifest_version": 3,
  "name": "Cloud Tasks Payload Decoder",
  "version": "1.0.0",
  "description": "Automatically decodes base64-encoded payloads in the Google Cloud Tasks UI",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://console.cloud.google.com/*"],
      "js": ["src/decoder.js", "src/dom-helpers.js", "src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
